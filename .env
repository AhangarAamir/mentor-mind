# /mentormind-backend/.env.example
# This is an example environment file.
# Copy this to .env and fill in your actual configuration values.

# PostgreSQL settings
# These defaults match the docker-compose.yml file.
DB_USER=postgres
DB_PASSWORD=sphi123
DB_NAME=tutor

# The full database connection URL used by the application.
# This points to the 'db' service in docker-compose.
DATABASE_URL=postgresql://postgres:sphi123@localhost:5432/tutor

# Redis URL for Celery
# This points to the 'redis' service in docker-compose.
REDIS_URL=redis://redis:6379/0

# JWT Authentication settings
# IMPORTANT: Change this to a long, random, and secret string in your .env file.
# You can generate one with: openssl rand -hex 32
SECRET_KEY=a_very_secret_key_that_should_be_changed
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Gemini API Key
# IMPORTANT: Add your Google API key here.
